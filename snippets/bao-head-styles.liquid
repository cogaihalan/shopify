{%- capture color_styles -%}
{%- liquid
  assign color_value_array = shop.metafields.globals.color_label
  assign color_hex_array = shop.metafields.globals.color_hex
  assign color_image_array = shop.metafields.globals.color_image

  for color_value in color_value_array
    assign handleized_color_value = color_value | strip | handleize
    assign color_hex = color_hex_array[forloop.index0]
    assign color_image = color_image_array[forloop.index0].first.src

    if color_hex != blank
      echo ".col-Color-" | append: handleized_color_value | append: "{" | append: "color:" | append: color_hex | append: ";}"
    elsif color_image != blank
      assign background_image_rule = "background-image: url(" | append: color_image | append: ");"
      echo ".col-Color-" | append: handleized_color_value | append: "{" | append: background_image_rule | append: "background-size: cover;" | append: "color: transparent;" | append: "}"
    endif
  endfor
-%}
{%- endcapture -%}
<style>{{- color_styles -}}</style>
