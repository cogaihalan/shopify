{{ 'account.css' | asset_url | stylesheet_tag }}

{%- capture body -%}
<div class="acc-Account_Inner lyt-Container">

  <div class="acc-Account_ContentContainer">
    <div class="acc-Account_Content acc-Account_Content-reset">
      <div class="acc-Account_Form">
        <h1 class="acc-Account_Title acc-Account_Title-form fz-24_29">
          {{ 'customer.activate_account.title' | t }}
        </h1>

        <p class="acc-Account_Text">
          {{ 'customer.activate_account.subtext' | t }}
        </p>
      
        <div class="frm-Form">
          {%- form 'activate_customer_password', class: 'frm-Form' -%}
        
            <div class="frm-Form_Row frm-Form_Row-first">
              {%- liquid
                assign success_message = 'customer.activate_account.success_message' | t | strip
                assign error_message = 'customer.activate_account.error_message' | t | strip
              -%}
              {%- render 'form-messages', form: form, success_message: success_message, error_message: error_message -%}
              {%- render 'form-field-customer', form: form, field_name: "Password", translation_key: "customer.activate_account.password", type: "password" -%}
            </div>
        
            <div class="frm-Form_Row">
              {%- render 'form-field-customer', form: form, field_name: "Password Confirmation", translation_key: "customer.activate_account.password_confirm", type: "password" -%}
            </div>
        
            <div class="frm-Form_Row">
              <p class="frm-Form_Text frm-Form_Text-footer fz-12_17">
                {{ 'customer.reset_password.required_fields' | t }}
              </p>
            </div>
        
            <div class="frm-Form_Row frm-Form_Row-last">
              <div class="frm-Form_Actions">
                <button
                  class="frm-Form_Submit frm-Form_Button-login btn-Button-primary btn-Button-border btn-Button"
                  type="submit"
                >
                  {{ 'customer.activate_account.submit' | t }}
                </button>       
              </div>
            </div>
          {%- endform -%}
        </div>
      </div>
    </div>
  </div>
</div>
{%- endcapture -%}

{%- render 'section-account',
  body: body
-%}