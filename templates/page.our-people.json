    "17b852b8-76d4-4229-904c-11de6e11b224": {
      "type": "section-content",
      "settings": {
        "section_margin": "spacingStandard",
        "title": "POLLY CARES",
        "title_size": "fz-58_64",
        "title_alignment": "center",
        "subtitle": "",
        "text": "<p>Our culture is diverse, creative and collaborative. Our teams are committed, ambitious and hard working. We offer an environment to flourish and develop.<\/p>",
        "button_text": "",
        "button_url": ""
      }
