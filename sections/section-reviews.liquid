<link
  rel="stylesheet"
  href="{{ 'section-reviews.css' | asset_url }}"
  media="print"
  onload="this.media='all'"
>

{%- capture body -%}
<section class="sec-Reviews">
  <div class="sec-Reviews_Inner lyt-Container">
    {%- if section.settings.review_type == "product" -%}
    <!-- TrustBox widget - Product Reviews MultiSource -->
    <div class="trustpilot-widget" data-locale="en-GB" data-template-id="57177697fdb1180308e3815f" data-businessunit-id="55a3b2ec0000ff0005810429" data-style-height="700px" data-style-width="100%" data-theme="light" data-stars="1,2,3,4,5" data-sku="{% for variant in product.variants %}{% if forloop.last %}{{ variant.sku | append: ',' | append: product.id }}{% else %}{{ variant.sku | append: ',' }}{% endif %}{% endfor %}" data-review-languages="en" data-star-color="#E2A9A9" data-text-color="#111111" data-no-reviews="show" data-scroll-to-list="true" data-allow-robots="true">
      <a href="https://uk.trustpilot.com/review/ohpolly.com" target="_blank" rel="noopener">Trustpilot</a>
    </div>
    <!-- End TrustBox widget -->
    {%- else -%}
    <!-- TrustBox widget - Mini Carousel -->
    <div class="trustpilot-widget" data-locale="en-GB" data-template-id="539ad0ffdec7e10e686debd7" data-businessunit-id="55a3b2ec0000ff0005810429" data-style-height="300px" data-style-width="100%" data-theme="light" data-stars="3,4,5" data-sku="test" data-review-languages="en" data-star-color="#E2A9A9" data-text-color="#111111" data-no-reviews="show" data-scroll-to-list="true" data-allow-robots="true">
      <a href="https://uk.trustpilot.com/review/ohpolly.com" target="_blank" rel="noopener">Trustpilot</a>
    </div>
    <!-- End TrustBox widget -->
    {%- endif -%}
  </div>
</section>
{%- endcapture -%}

{%- render 'section',
  flush: true,
  body: body
-%}

{% schema %}
{
  "name": "Reviews",
  "templates": ["product"],
  "settings": [
    {
      "type": "select",
      "id": "review_type",
      "label": "label",
      "options": [
        {
          "value": "store",
          "label": "Store Reviews"
        },
        {
          "value": "product",
          "label": "Product Specific Reviews"
        }
      ],
      "default": "store"
    }
  ],
  "presets": [
    {
      "name": "Reviews"
    }
  ]
}
{% endschema %}