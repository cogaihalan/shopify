  {
    "name": "Nosto Recommendations",
    "settings": [
      {
        "type": "text",
        "id": "nosto_id",
        "label": "Nosto ID"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button text"
      },
      {
        "type": "url",
        "id": "button_url",
        "label": "Button url"
      }
    ],
    "presets": [
      {
        "name": "Nosto Recommendations"
      }
